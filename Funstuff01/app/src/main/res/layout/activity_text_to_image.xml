<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_gradient_1">

    <View
        android:id="@+id/bgFade"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_fading"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/toolbar" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="#00000000"
        android:translationZ="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_arrow_back"
                app:tint="@color/colorOnBackground"
                android:focusableInTouchMode="true"
                android:focusable="true"/>

            <FrameLayout
                android:id="@+id/flTextColor"
                android:visibility="gone"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/btnTextColor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/baseline_circle_24"
                    app:tint="@color/colorOnBackground"
                    android:alpha="0.25"/>

                <TextView
                    android:id="@+id/tvColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center" />

            </FrameLayout>



            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/seekbar"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:max="36"
                android:progress="12"
                android:progressBackgroundTint="@color/colorOnBackground"
                android:progressTint="@color/colorOnBackground"
                android:thumbTint="@color/colorOnBackground"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnDone"
                app:layout_constraintStart_toEndOf="@id/flTextColor"
                app:layout_constraintTop_toTopOf="parent" />


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvAddMusic"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:backgroundTint="@color/transparent"
                app:layout_constraintBottom_toBottomOf="@+id/btnPost"
                app:layout_constraintEnd_toStartOf="@+id/btnPost"
                app:layout_constraintTop_toTopOf="@+id/btnPost"
                app:layout_constraintDimensionRatio="1:1"
                android:layout_marginEnd="@dimen/_8sdp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/dark_panel"
                        android:alpha="0.95"/>


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/musicIcon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_musical_note"
                        app:tint="@color/colorAccent"
                        android:padding="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_2sdp"/>


                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivAudioSelected"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:srcCompat="@drawable/ic_done"
                        android:visibility="gone"
                        app:tint="@color/colorAccent"
                        app:layout_constraintDimensionRatio="1:1"
                        android:background="@color/dark_panel"
                        app:shapeAppearance="@style/RoundedImageViewShape"
                        app:layout_constraintTop_toTopOf="@id/musicIcon"
                        app:layout_constraintEnd_toEndOf="@id/musicIcon"
                        app:layout_constraintStart_toStartOf="@id/guidelineHalf" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guidelineHalf"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post"
                android:layout_marginEnd="@dimen/_16sdp"
                android:textAllCaps="false"
                android:textColor="@color/colorOnBackground"
                android:textSize="14sp"
                app:backgroundTint="#4DC662"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btnDone"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_tick_fab" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>


    <EditText
        android:id="@+id/etText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_16sdp"
        android:background="#00000000"
        android:translationZ="0dp"
        android:gravity="center"
        android:hint="What's on your mind"
        android:textColor="@color/backgroundColor"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btnChangeBg"
        android:layout_width="@dimen/_48sdp"
        android:layout_height="@dimen/_48sdp"
        android:translationZ="10dp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:background="@drawable/bg_gradient_circle_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvColors"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:layout_marginBottom="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/text_color_list_item"
        tools:itemCount="1"
        android:orientation="horizontal" />

    <ImageView
        android:id="@+id/imgPost"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_64sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

</androidx.constraintlayout.widget.ConstraintLayout>